@model EnglishCourses.Web.Models.Teacher.EditTeacher

@{
    ViewBag.Title = "EditTeacher";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}


@Html.ValidationSummary(true)
<section id="main-content" class="">
    <section class="wrapper main-wrapper row" style=''>
        <div class='col-12'>
            <div class="page-title">
                <div class="float-left">
                    <!-- PAGE HEADING TAG - START -->
                    <h1 class="title">Edit Professor</h1>
                    <!-- PAGE HEADING TAG - END -->
                </div>
                <div class="float-right d-none">
                    <ol class="breadcrumb">
                        <li>
                            <a href=""><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Teachers", "Admin")">Teachers</a>
                        </li>
                        <li class="active">
                            <strong>Edit Teacher</strong>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="col-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title float-left">Basic Info</h2>
                    <div class="actions panel_actions float-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        @using (Html.BeginForm("EditTeacher", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-12 col-md-9 col-lg-8">
                                <div class="form-group">
                                    <label class="form-label">Profile Picture</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="file" name="ProfilePicture" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        @Html.TextAreaFor(model => model.Name, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Teacher Name",
                                            required = "true"
                                        })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Biography</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        @Html.TextAreaFor(model => model.Biography, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Teacher Biography",
                                            rows = "15",
                                            required = "true"
                                        })
                                        @Html.ValidationMessageFor(model => model.Biography, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                <div class="text-left">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <a href="@Url.Action("Teachers", "Admin")" class="btn btn-success btn-sm float-right">Back</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>
