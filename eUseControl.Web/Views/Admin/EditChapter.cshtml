@model EnglishCourses.Web.Models.ViewModelsAdmin.AdminEditChapterView

@{
    ViewBag.Title = "Edit Chapter";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<!-- Main Content Section -->
<section id="main-content" class="">
    <section class="wrapper main-wrapper row" style="">
        <div class="col-12">
            <div class="page-title">
                <div class="float-left">
                    <h1 class="title">Edit Chapter</h1>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <!-- Main Content Area Starts -->
        <div class="col-lg-12">
            <section class="box">
                <div class="content-body">
                    @using (Html.BeginForm("EditChapter", "Admin", FormMethod.Post, new { chapterId = Model.chapterId, courseId = Model.Chapter.CourseId, @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.HiddenFor(model => model.Chapter.CourseId)
                            @Html.HiddenFor(model => model.Chapter.Id)

                            @Html.LabelFor(model => model.Chapter.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Chapter.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Edit Chapter Title", required = true } })
                                @Html.ValidationMessageFor(model => model.Chapter.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Chapter.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Chapter.Description, new { @class = "form-control", placeholder = "Edit Chapter Description", rows = 5, required = true })
                                @Html.ValidationMessageFor(model => model.Chapter.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Chapter.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Chapter.Content, new { @class = "form-control", placeholder = "Edit Chapter Content", rows = 40, required = true })
                                @Html.ValidationMessageFor(model => model.Chapter.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                                <a href="@Url.Action("CourseDetails", "Admin", new { id = Model.Chapter.CourseId })" class="btn btn-success btn-sm float-right">Back</a>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
        <!-- Main Content Area Ends -->
    </section>
</section>
