@model EnglishCourses.Web.Models.Teacher.RegisterTeacher

@{
    ViewBag.Title = "AddTeacher";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<!-- Main Content Section -->
<section id="main-content" class="">
    <section class="wrapper main-wrapper row" style="">
        <div class="col-12">
            <div class="page-title">
                <div class="float-left">
                    <h1 class="title">Add New Teacher</h1>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <!-- Main Content Area Starts -->
        <div class="col-lg-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title float-left">Basic Info</h2>
                    <div class="actions panel_actions float-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body">
                    @using (Html.BeginForm("AddTeacher", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-12 col-md-9 col-lg-8">
                                <!-- Profile Picture -->
                                <div class="form-group">
                                    <label class="form-label">Profile Picture</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        @Html.Label("Default Image", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input type="file" name="ProfilePicture" required />
                                        </div>
                                    </div>
                                </div>

                                <!-- Name -->
                                <div class="form-group">
                                    <label class="form-label">Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Teacher Name", required = "true" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Biography -->
                                <div class="form-group">
                                    <label class="form-label">Biography</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        @Html.TextAreaFor(model => model.Biography, new { @class = "form-control", placeholder = "Teacher Biography", rows = "5", required = "true" })
                                        @Html.ValidationMessageFor(model => model.Biography, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <a href="@Url.Action("Teachers", "Admin")" class="btn btn-success btn-sm float-right">Cancel</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
        <!-- Main Content Area Ends -->
    </section>
</section>
