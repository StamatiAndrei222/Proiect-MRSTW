@model EnglishCourses.Web.Models.ViewModelsAdmin.AdminCoursesView

@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<!-- Main Content Section -->
<section id="main-content" class="">
    <section class="wrapper main-wrapper row" style="">
        <div class="col-12">
            <div class="page-title">
                <div class="float-left">
                    <h1 class="title">Courses</h1>
                </div>
                <div class="float-right d-none">
                    <ol class="breadcrumb">
                        <li><a href="index.html"><i class="fa fa-home"></i>Home</a></li>
                        <li><a href="uni-courses.html">Courses</a></li>
                        <li class="active"><strong>All Courses</strong></li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <!-- Main Content Area Starts -->
        <div class="col-lg-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title float-left">All Courses</h2>
                    <div class="actions panel_actions float-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <!-- Course Listing -->
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Teacher</th>
                                        <th>Category</th>
                                        <th>Students</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Courses != null && Model.Courses.Any())
                                    {
                                        foreach (var course in Model.Courses)
                                        {
                                            <tr data-id="@course.Id">
                                                <td><img src="data:image;base64,@course.DisplayImage" alt="@course.Title" style="max-height: 100px;" /></td>
                                                <td>@course.Title</td>
                                                <td>@course.TeacherName</td>
                                                <td>@course.Category.ToString()</td>
                                                <td>@course.StudentsCount</td>
                                                <td>
                                                    <a href="@Url.Action("CourseDetails", "Admin", new {id = course.Id} )" class="btn btn-primary">View</a>
                                                    <button class="btn btn-danger delete-course">Delete</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <!-- Main Content Area Ends -->
    </section>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.delete-course').on('click', function() {
                var button = $(this);
                var courseId = button.closest('tr').data('id');

                if (confirm('Are you sure you want to delete this course?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteCourse", "Admin")',
                        type: 'POST',
                        data: { id: courseId },
                        success: function(response) {
                            if (response.success) {
                                window.location.reload();
                                alert('Course deleted successfully.');
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('An error occurred while deleting the course.');
                        }
                    });
                }
            });
        });
    </script>
}