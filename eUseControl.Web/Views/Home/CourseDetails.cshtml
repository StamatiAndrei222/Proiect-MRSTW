@model EnglishCourses.Web.Models.ViewModels.CourseDetailsView

@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/HomeLayout/_Layout.cshtml";
}

<!-- Detail Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-5">
                    <div class="section-title position-relative mb-5">
                        <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Course Detail</h6>
                        <h1 class="display-4">@Model.Course.Title</h1>
                    </div>
                    <img class="img-fluid" src="data:image;base64,@Model.Course.DisplayImage" alt="@Model.Course.Title">
                    <p>
                        @Model.Course.Description
                    </p>
                </div>

            </div>
        </div>

        <div class="col-lg-4 mt-5 mt-lg-0">
            <div class="bg-primary mb-5 py-3">
                <h3 class="text-white py-3 px-4 m-0">Course Features</h3>
                <div class="d-flex justify-content-between border-bottom px-4">
                    <h6 class="text-white my-3">Instructor</h6>
                    <h6 class="text-white my-3">@Model.Course.TeacherName</h6>
                </div>
                <div class="d-flex justify-content-between border-bottom px-4">
                    <h6 class="text-white my-3">Students</h6>
                    <h6 class="text-white my-3">@Model.Course.StudentsCount</h6>
                </div>
                <div class="d-flex justify-content-between border-bottom px-4">
                    <h6 class="text-white my-3">Skill level</h6>
                    <h6 class="text-white my-3">@Model.Course.Category.ToString()</h6>
                </div>
                <div class="py-3 px-4">
                    @if (Model.NavbarView != null && Model.NavbarView.Authenticated == true)
                    {
                        <a class="btn btn-block btn-secondary py-3 px-5" href="@Url.Action("CourseContent","Home", new {id = Model.Course.Id})">View Course</a>
                    }
                    else
                    {
                        <a class="btn btn-block btn-secondary py-3 px-5" href="@Url.Action("Login","Login")">Login View Course</a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detail End -->
