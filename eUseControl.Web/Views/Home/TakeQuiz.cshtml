@model EnglishCourses.Web.Models.ViewModels.QuizView

@{
    ViewBag.Title = "TakeQuiz";
    Layout = "~/Views/Shared/HomeLayout/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Take the Quiz</h2>

            @if (Model != null && Model.Quiz != null && Model.Quiz.Questions != null)
            {
                using (Html.BeginForm("TakeQuiz", "Home", FormMethod.Post, new { @class = "quiz-form" }))
                {
                    @Html.AntiForgeryToken()

                    for (int i = 0; i < Model.Quiz.Questions[0].Count; i++)
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                <h4 class="card-title">@Model.Quiz.Questions[0][i].Question</h4>
                            </div>
                            <div class="card-body">
                                <p class="card-text"></p>
                                <ul class="list-unstyled">
                                    @for (int j = 0; j < Model.Quiz.Questions[0][i].PossibleAnswers.Count; j++)
                                    {
                                        <li class="mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" id="answer-@i-@j" name="Questions[0][@i].Answer" value="@j">
                                                <label class="form-check-label" for="answer-@i-@j">@Model.Quiz.Questions[0][i].PossibleAnswers[j]</label>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    <div class="text-center">
                        <input type="submit" value="Submit Quiz" class="btn btn-primary btn-lg" />
                    </div>
                }
            }
        </div>
    </div>
</div>

<style>
    .quiz-form {
        max-width: 800px;
        margin: 0 auto;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #f8f9fa;
    }

    .form-check-input {
        margin-top: 0.3rem;
    }
</style>
